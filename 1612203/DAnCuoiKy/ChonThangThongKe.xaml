        <Button Content="Thống kê" Name="btnTk" Height="25" Width="70" Canvas.Left="272" Canvas.Top="190" Click="btnTk_Click"></Button>
        <Button Content="Thoát" Name="btnExit" Height="25" Width="70" Canvas.Left="412" Canvas.Top="190" Click="btnExit_Click"></Button>
        <DatePicker Name="monthPicker" Canvas.Left="526" Canvas.Top="69"></DatePicker>
    </Canvas>
</Window>
