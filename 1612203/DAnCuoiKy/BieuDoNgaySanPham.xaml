<Window x:Class="DAnCuoiKy.BieuDoNgaySanPham"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expr
        ession/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:local="clr-namespace:DAnCuoiKy"
        mc:Ignorable="d"
        Title="BieuDoNgaySanPham" Height="600" Width="800" Loaded="Window_Loaded">
    <Canvas>
        <Label Content="THỐNG KÊ THEO NGÀY" FontSize="20" FontWeight="Bold" Canvas.Left="289" Foreground="Blue" Canvas.Top="47"></Label>
        <DVC:Chart Width="500" Height="400" Canvas.Top="150" Canvas.Left="100" BorderBrush="Transparent" >
            <DVC:Chart.Series>
                <DVC:PieSeries  Name="chart" BorderBrush="Transparent"
                
                    IndependentValueBinding="{Binding name}"
                    DependentValueBinding="{Binding amount}">
                </DVC:PieSeries>
            </DVC:Chart.Series>
        </DVC:Chart>

    </Canvas>
</Window>
